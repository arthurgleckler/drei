{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DREI",
        "width": 800,
        "height": 600,
        "incognito": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "identifier": "com.drei.app",
  "plugins": {
    "cli": {
      "description": "Web editor with Emacs key bindings. Either --url or --file must be specified.",
      "args": [
        { 
          "name": "url", 
          "takesValue": true,
          "description": "URL to load (HTTP GET) and save (HTTP POST)"
        },
        { 
          "name": "file", 
          "takesValue": true,
          "description": "Local file path to load and save (preserves content outside selector)"
        },
        { 
          "name": "selector", 
          "takesValue": true, 
          "required": true,
          "description": "CSS selector for the editable content element"
        }
      ]
    }
  },
  "productName": "DREI",
  "version": "0.1.0"
}